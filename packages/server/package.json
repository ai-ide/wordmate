{
  "name": "@wordmate/server",
  "version": "1.0.0",
  "description": "WordMate Backend Server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env PORT=3001 nodemon --watch src --ext ts,json --exec node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "koa": "^2.14.2",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.8",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  }
}
